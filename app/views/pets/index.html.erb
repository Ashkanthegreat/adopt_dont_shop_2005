<h1>Pets</h1>

<% @pets.each do |pet| %>
 <h3><%= link_to "#{pet.name}", "/pets/#{pet.id}" %></h3>
  <p><%= pet.image %></p>
  <p><%= pet.approximate_age%></p>
  <p><%= pet.sex %></p>
  <p><%= link_to pet.shelter.name, "/shelters/#{pet.shelter.id}" %></p>
  <p><%= link_to "Update Pet", "/pets/#{pet.id}/edit" %></p>
  <p><%= link_to "Delete Pet", "/pets/#{pet.id}", method: :delete %>
</p>
<% end %>
